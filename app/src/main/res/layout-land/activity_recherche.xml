<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RechercheActivity">

    <!-- Tool bar -->
    <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"

        app:title="@string/title_activity_recherche"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Resultat -->
    <fragment android:id="@+id/carte"
        android:name="com.google.android.gms.maps.SupportMapFragment"

        android:layout_width="@dimen/taille_carte"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"

        tools:layout="@layout/dummy_map" />

    <ExpandableListView android:id="@+id/resultat"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:visibility="invisible"

        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintStart_toEndOf="@id/carte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView android:id="@+id/erreur"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/rechr_tuto"

        app:layout_constraintTop_toTopOf="@id/resultat"
        app:layout_constraintStart_toStartOf="@id/resultat"
        app:layout_constraintEnd_toEndOf="@id/resultat"
        app:layout_constraintBottom_toBottomOf="@id/resultat" />

</android.support.constraint.ConstraintLayout>