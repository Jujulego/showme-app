<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <fragment android:id="@+id/selecttype"
        android:name="net.capellari.showme.TypeSpinnerFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnSpan="2"
        android:layout_row="0"

        app:selecttype_actif="true"

        tools:layout="@layout/fragment_typespinner"/>

    <TextView android:id="@+id/filtrer_types_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="1"

        android:padding="@dimen/text_margin"
        android:text="@string/filtrer_types"

        app:layout_constraintTop_toBottomOf="@id/selecttype"/>

    <CheckBox android:id="@+id/filtrer_types"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_row="1"

        android:checked="true"

        app:layout_constraintTop_toTopOf="@id/filtrer_types_texte"
        app:layout_constraintStart_toEndOf="@id/filtrer_types_texte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/filtrer_types_texte"/>

    <TextView android:id="@+id/lieu_status_texte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_row="2"

        android:padding="@dimen/text_margin"
        android:text="@string/status_texte"

        app:layout_constraintTop_toBottomOf="@id/filtrer_types_texte"/>

    <Spinner android:id="@+id/lieu_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/text_margin"
        android:layout_gravity="center_vertical"

        android:layout_column="1"
        android:layout_row="2"

        android:padding="@dimen/text_margin"

        app:layout_constraintTop_toTopOf="@id/lieu_status_texte"
        app:layout_constraintStart_toEndOf="@id/lieu_status_texte"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/lieu_status_texte" />
</android.support.constraint.ConstraintLayout>