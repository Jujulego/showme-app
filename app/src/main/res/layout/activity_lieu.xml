<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".LieuActivity">

    <!-- ToolBar -->
    <android.support.design.widget.AppBarLayout android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:elevation="4dp"
        android:stateListAnimator="@animator/appbar_elevation">

        <android.support.design.widget.CollapsingToolbarLayout android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:elevation="4dp"

            app:contentScrim="?attr/colorPrimary"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            app:toolbarId="@id/toolbar">

            <com.android.volley.toolbox.NetworkImageView android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scaleType="centerCrop" />

            <RatingBar android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="?attr/actionBarSize"
                android:layout_marginEnd="8dp"
                android:visibility="gone"

                style="@style/AppTheme.RatingBar"
                android:progressDrawable="@drawable/ratingbar"
                android:progressTint="@color/couleur_ratingbar"
                android:secondaryProgressTint="@color/couleur_ratingbar"
                android:progressBackgroundTint="@color/couleur_ratingbar"

                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="2.5"

                app:layout_collapseMode="pin"

                tools:visibility="visible"/>

            <android.support.v7.widget.Toolbar android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:elevation="4dp"

                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <!-- Contenu -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_bar_height"
        android:elevation="1dp"

        app:layout_behavior="net.capellari.showme.SuivreAppBarBehavior">

        <fragment android:id="@+id/carte"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="@dimen/taille_carte"

            tools:layout="@layout/dummy_map" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.constraint.Guideline android:id="@+id/guideline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                app:layout_constraintGuide_begin="@dimen/taille_carte"/>

            <TextView android:id="@+id/adresse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/inconnu"
                android:enabled="false"

                android:drawableStart="@drawable/map_details"
                android:drawablePadding="16dp"

                app:layout_constraintTop_toBottomOf="@id/guideline"/>

            <TextView android:id="@+id/prix"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/inconnu"
                android:enabled="false"

                android:drawableStart="@drawable/credit_card_details"
                android:drawablePadding="16dp"

                app:layout_constraintTop_toBottomOf="@id/adresse" />

            <TextView android:id="@+id/telephone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/inconnu"
                android:enabled="false"

                android:drawableStart="@drawable/phone_details"
                android:drawablePadding="16dp"

                app:layout_constraintTop_toBottomOf="@id/prix" />

            <TextView android:id="@+id/site_web"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp"
                android:text="@string/inconnu"
                android:enabled="false"

                android:drawableStart="@drawable/web_details"
                android:drawablePadding="16dp"

                app:layout_constraintTop_toBottomOf="@id/telephone" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
