<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView android:id="@+id/horaire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="100"
        android:layout_columnSpan="2"
        android:visibility="visible"

        android:padding="@dimen/text_margin"
        android:text="@string/ferme"
        android:gravity="center"

        tools:visibility="invisible" />

    <TextView android:id="@+id/horaire1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="0"
        android:layout_columnWeight="50"
        android:visibility="invisible"

        android:padding="@dimen/text_margin"
        android:gravity="center"

        tools:text="8:00 - 12:00"
        tools:visibility="visible" />
    <TextView android:id="@+id/horaire2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_columnWeight="50"
        android:visibility="invisible"

        android:padding="@dimen/text_margin"
        android:gravity="center"

        tools:text="13:00 - 17:00"
        tools:visibility="visible" />
</GridLayout>