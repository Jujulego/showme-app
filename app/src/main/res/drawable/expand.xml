<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Désactivé -->
    <item android:state_enabled="false">
        <bitmap android:src="@drawable/ic_expand_more_black_24dp"
            android:tint="@android:color/tertiary_text_light" />
    </item>

    <!-- Sélectionné => ouvert -->
    <item android:state_selected="true"
        android:drawable="@drawable/ic_expand_less_black_24dp" />

    <!-- Désélectionné => fermé -->
    <item android:drawable="@drawable/ic_expand_more_black_24dp" />
</selector>