<resources>
    <!-- Theme de base, avec l'action bar -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Couleurs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Texte -->
        <item name="android:textColor">@color/couleur_police</item>
        <item name="android:textSize">@dimen/moyenne_police</item>

        <!-- Préférences -->
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <!-- Theme de base, sans l'action bar -->
    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Couleurs -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Texte -->
        <item name="android:textColor">@color/couleur_police</item>
        <item name="android:textSize">@dimen/moyenne_police</item>

        <!-- Préférences -->
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>

        <!-- Icones -->
        <item name="drawerArrowStyle">@style/AppTheme.DrawerArrowStyle</item>
    </style>

    <!-- Préférences -->
    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="switchPreferenceCompatStyle">@style/Preference.SwitchPreferenceCompat</item>
        <item name="android:dividerHeight">0dp</item>
    </style>

    <!-- Toolbars -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Icones -->
    <style name="AppTheme.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>

    <!-- RatingBar -->
    <style name="AppTheme.RatingBar" parent="Widget.AppCompat.RatingBar.Indicator" />
</resources>
